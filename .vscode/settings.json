{
    "python.pythonPath": "/Users/miravicson/.pyenv/versions/flask_web_dev/bin/python",
    "editor.detectIndentation": true,
    "editor.formatOnPaste": true,
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "files.insertFinalNewline": true,
    "[python]": {
        "editor.rulers": [
            72,
            79
        ],
        "editor.tabSize": 4,
        "editor.insertSpaces": true
    },
    "workbench.colorCustomizations": {
        "activityBar.background": "#e0ac73",
        "activityBar.foreground": "#15202b",
        "activityBar.inactiveForeground": "#15202b99",
        "activityBarBadge.background": "#1d8252",
        "activityBarBadge.foreground": "#e7e7e7",
        "titleBar.activeBackground": "#d79349",
        "titleBar.inactiveBackground": "#d7934999",
        "titleBar.activeForeground": "#15202b",
        "titleBar.inactiveForeground": "#15202b99",
        "statusBar.background": "#d79349",
        "statusBarItem.hoverBackground": "#c27a2b",
        "statusBar.foreground": "#15202b"
    },
    "peacock.color": "#d79349",
    "python.linting.enabled": true,
    "python.linting.ignorePatterns": [
        ".vscode/*.py",
        "**/site-packages/**/*.py"
    ],
    "python.formatting.autopep8Args": ["--ignore=E402", "--ignore=E701"],
    "python.formatting.provider": "autopep8",
    "python.dataScience.enabled": true,
    "python.linting.pycodestyleEnabled": false,
    "python.linting.flake8Enabled": true,
    "python.linting.flake8Args": ["--ignore=E501"],
    "[markdown]": {
        "editor.wordWrap": "on"
    },
    "files.associations": {
        "Brewfile": "ruby",
        "vimrc": "viml"
    },
    "files.exclude": {
        "**/.git": true,
        "**/.DS_Store": true,
        "**/__pycache__": true,
        "**/**/*.pyc": true
    },
    "trailing-spaces.trimOnSave": false,
    "trailing-spaces.syntaxIgnore": [
        "markdown"
    ],
    "code-runner.runInTerminal": true,
    "code-runner.executorMap": {
        "python": "clear && $pythonPath -u $fullFileName"
    }
}
